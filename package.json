{
	"name": "listen-later",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "firebase emulators:exec --ui --only auth,functions,firestore \"npx concurrently \\\"npx vite dev\\\" \\\"npm run build:watch --workspace ./functions\\\"",
		"build": "vite build",
		"preview": "firebase emulators:start",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"kill-emulator-ports": "npx kill-port 4000 9099 5001 8080 5000"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "^1.9.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.4",
		"@tailwindcss/forms": "^0.5.3",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^4.0.3",
		"@testing-library/user-event": "^14.4.3",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.2.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"fuzzysort": "^2.0.4",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"uuid": "^9.0.0",
		"vite": "^4.3.6",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"firebase": "^9.23.0"
	},
	"workspaces": [
		"./functions"
	]
}
